<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= query %> - Domainlookup</title>

    <link href="/assets/css/info.css" rel="stylesheet">
</head>
<body>
    <div class="loader"></div>

    <%- include("partials/nav.ejs", { mainpage: false }) %>

    <div class="mainWrapper">
        <main>
            <div class="titlebar">
                <h1><%= query%></h1>
                <div class="tabs">
                    <button type="button" class="clear tabs--tab -active" onclick="changeSection('whoislist');">Whois</button>
                    <%if (queryType === "domain") {%>
                        <button type="button" class="clear tabs--tab" onclick="changeSection('dnslist');">DNS</button>
                        <button type="button" class="clear tabs--tab" onclick="changeSection('otherlist');">Other</button>
                    <%}%>
                    <span class="tabs--line"></span>
                </div>
            </div>

            <div id="whoislist" class="boxlist _shown"></div>
            <div id="dnslist" class="boxlist"></div>
            <div id="otherlist" class="boxlist"></div>
        </main>
    </div>

    <input id="query" type="text" value="<%= query %>" style="display: none;">

    <script src="/assets/js/assets.js"></script>
    <script src="/assets/js/tabs.js"></script>
    <script src="/assets/js/infopage.js"></script>
    <% if (queryType === "domain") {%><script src="/assets/js/domain.js"></script><%}%>
    <% if (queryType === "tld") {%><script src="/assets/js/tld.js"></script><%}%>
</body>
</html>